{
  "tags": {
    "allowUnknownTags": ["optional"]
  },
  "plugins": ["node_modules/better-docs/typescript"],
  "source": {
    "include": ["readme.md", "src"],
    "includePattern": "\\.(ts)$",
    "excludePattern": "(node_modules/|docs|lib/)"
  },
  "opts": {
    "destination": "./docs/",
    "recurse": true
  },
  "templates": {
    "default": {
      "outputSourceFiles": false
    },
    "cleverLinks": false,
    "monospaceLinks": false,
    "search": true,
    "better-docs": {
      "hideGenerator": true
    }
  }
}
